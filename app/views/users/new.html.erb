<div class="container">
  <% provide(:title, 'Sign up') %>
  <h1 class="text-center ">Sign up</h1>

  <div class="container">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages' %>

          <div class="row">
          <div class="input col-md-12 col-md-offset-0" + <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
          </div>
          <div class="input col-md-12 col-md-offset-0" + <%= f.label :password %>
            <div class="input col-md-12 col-md-offset-0" + <%= f.password_field :password, class: 'form-control' %>
            </div>
          <div class="row">
            <div class="input col-md-12 col-md-offset-0" + <%= f.label :password_confirmation, "Confirmation" %>
            <div class="input col-md-12 col-md-offset-0" + <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
          <%= f.submit "Create my account", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <%= debug(params) if Rails.env.development? %>
</div>