<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>

    <ul class="users">
      <% @users.each do |user| %>
          <li>
            <!--owibka vyhodit-->
            <%= gravatar_for user%>
            <%= link_to user.email, user %>
            <% if current_user.admin? && !current_user?(user) %>
                | <%= link_to "delete", user, method: :delete,
                              data: { confirm: "Are you sure to delete #{user.email}?" } %>
            <% end %>
          </li>
      <% end %>
    </ul>

<%= will_paginate %>