<p id="notice"><%= notice %></p>

<h1>Listing Book Types</h1>

<div class="table-responsive">
  <table class="table">
      <thead>
        <tr>
          <th>Category</th>
          <th>Name</th>
          <th>Author</th>
          <th>Publish year</th>
          <th>Price</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @book_types.each do |book_type| %>
          <tr>
            <td><%= book_type.category.name %></td>
            <td><%= book_type.name %></td>
            <td><%= book_type.author %></td>
            <td><%= book_type.publish_year %></td>
            <td><%= book_type.price %></td>
            <td><%= link_to image_tag("/images/info.png"), book_type %></td>
            <td><%= link_to image_tag("/images/modify.png"), edit_book_type_path(book_type) %></td>
            <td><%= link_to image_tag("/images/delete.png"), book_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
  </table>
</div>
<br>

<%= link_to  image_tag("/images/add.png") + raw("<span>Add new Book Template</span>"), new_book_type_path %>
