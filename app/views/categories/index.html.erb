


<div class="row">

    <div class="col-md-6">
      <p id="notice"><%= notice %></p>

      <h1>Listing Categories</h1>
      <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
            </thead>

            <tbody>
            <% @categories.each do |category| %>
                <tr>
                  <td><%= category.name %></td>
                  <td><%= link_to link_to image_tag("/images/info.png", width: 20, height: 20), category %></td>
                  <td><%= link_to link_to image_tag("/images/modify.png", width: 20, height: 20), edit_category_path(category) %></td>
                  <td><%= link_to link_to image_tag("/images/delete.png", width: 20, height: 20), category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
      </div>

    </div>

    <div class="col-md-6">
      <h1>New Category</h1>

      <%= render 'form' %>


    </div>

</div>







