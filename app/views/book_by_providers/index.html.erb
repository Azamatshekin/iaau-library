<h1>Listing Book By Providers</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_by_providers.each do |book_by_provider| %>
      <tr>
        <td><%= book_by_provider.date %></td>
        <td><%= link_to 'Show', book_by_provider %></td>
        <td><%= link_to 'Edit', edit_book_by_provider_path(book_by_provider) %></td>
        <td><%= link_to 'Destroy', book_by_provider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

